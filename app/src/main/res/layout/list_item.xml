<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/activity_margin">
    <TextView
        android:id="@+id/catalog_name_view"
        style="@style/CatalogNameView"
        tools:text="Product Name"/>
    <Button
        android:id="@+id/sale_button"
        style="@style/SaleButton" />
    <LinearLayout
        android:id="@+id/price_quantity_container"
        style="@style/PriceQuantityContainer">
        <TextView
            android:id="@+id/catalog_currency_sign"
            style="@style/PriceQuantityTextStyle"
            android:text="@string/product_currency"/>
        <TextView
            android:id="@+id/catalog_price_view"
            style="@style/PriceQuantityTextStyle"
            tools:text="Price: $10.00"/>
        <TextView
            android:id="@+id/catalog_quantity_label"
            style="@style/PriceQuantityTextStyle"
            android:paddingLeft="8dp"
            android:text="@string/catalog_quantity_label"
            tools:text="Quantity: "/>
        <TextView
            android:id="@+id/catalog_quantity_text"
            style="@style/PriceQuantityTextStyle"
            android:paddingLeft="2dp"
            tools:text="1"/>
    </LinearLayout>
</RelativeLayout>